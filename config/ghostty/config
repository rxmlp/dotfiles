
command = /usr/bin/env fish
shell-integration = fish
confirm-close-surface = false



# Themeing
theme = catppuccin-mocha
font-family = Berkeley Mono
font-style = Regular
font-size = 12
font-thicken = true
gtk-titlebar = false
unfocused-split-opacity = 0.5



# Keybinds

# Reload the config file
keybind = shift+control+r=reload_config

# Split windows
keybind = control+right=goto_split:right
keybind = control+left=goto_split:left
keybind = control+up=goto_split:top
keybind = control+down=goto_split:bottom
keybind = shift+control+right=new_split:right
keybind = shift+control+left=new_split:left
keybind = shift+control+up=new_split:up
keybind = shift+control+down=new_split:down

# Show all open tabs
keybind = shift+control+tab=toggle_tab_overview

# Disable keys
keybind = control+enter=unbind