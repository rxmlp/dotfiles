
#bind = $mainMod, TAB, hyprexpo:expo, toggle

# This just makes it so hyprexpo don't work on my left monitor
bind = $mainMod, TAB, exec, $HL/plugins/hyprexpo/hyprexpo.sh

plugin {
    hyprexpo {
        columns = 3
        gap_size = 5
        bg_col = rgb(000000)
        workspace_method = first 1 # [center/first] [workspace] e.g. first 1 or center m+1

        enable_gesture = false # laptop touchpad
        gesture_distance = 10 # how far is the "max"
        gesture_positive = false
    }
}

