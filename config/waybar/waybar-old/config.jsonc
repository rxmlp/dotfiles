{
    "output": "DP-1",
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "tray"
    ],
    "modules-center": [
    "custom/killactive",
	"hyprland/window"
    ],
    "modules-right": [
        "custom/clipboard",
        //"custom/recorder",
        "custom/hyprpicker",
        "wireplumber",
        "custom/notification",
        "network",
        "bluetooth",
        "custom/gpu-usage",
        "cpu",
        "temperature",
        "memory",
        "clock"
    ],

    "custom/hyprpicker": {
        "format": "Û∞åÅ",
        "on-click": "hyprpicker -a",
        "tooltip": false
    },

    "custom/recorder": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/recorder-check",
        "on-click": "~/.config/waybar/scripts/recorder-switch",
        "return-type": "json",
        "signal": 12
    },

    "custom/clipboard": {
        "format": "ÔÅø",
        "on-click": "cliphist list | rofi -dmenu | cliphist decode | wl-copy",
        "tooltip": false
    },

    "hyprland/window": {
        "format": "{}"
    },

    "custom/killactive": {
        "format": "ÔÄç",
        "tooltip": false,
        "on-click": "hyprctl dispatch killactive"
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "format": "{icon}",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace m+1",
        "on-scroll-down": "hyprctl dispatch workspace m-1",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": [],
            "7": [],
            "8": [],
            "9": []
        },
        "format-icons": {
          "active": "Û∞ÆØ",
          "empty": "ÔÑå",
          "default": "ÔÜí"
        }
    },

    "custom/gpu-usage": {
        "exec": "cat /sys/class/hwmon/hwmon5/device/gpu_busy_percent",
        "format": "Û∞æ≤ {}%",
        "return-type": "",
        "interval": 1
    },

    "cpu": {
        "interval": 15,
        "format": "Ôãõ {usage}%",
        "states": {
          "warning": 70,
          "critical": 90
        },
        "on-click": "kitty htop"
    },

    "memory": {
        "interval": 5,
        "format": "Ôî∏ {}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty htop"
    },

      "temperature": {
        "critical-threshold": 60,
        "format-critical": "Ôá¢ {temperatureC}¬∞C",
        "format": "Ôãâ {temperatureC}¬∞C",
        "interval": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp2_input"
    },

    "custom/launcher": {
        "interval": "once",
        "format": "ÔåÉ",
        "on-click": "pkill rofi || rofi -show drun",
        "on-click-right": "bash ~/.config/waybar/scripts/power-menu/powermenu.sh",
        "tooltip": false
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },

    "clock": {
        "format": "ÔÄó {:%H:%M}",
        "rotate": 0,
        "format-alt": "Û∞É≠ {:%d¬∑%m¬∑%y}",
        "on-click-right": "mode",
        "tooltip": false
        },

    "wireplumber": {
        "format": "{icon}  {volume}%",
      	"on-scroll-up": "swayosd-client --output-volume 5",
      	"on-scroll-down": "swayosd-client --output-volume -5",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
	    "on-click": "swayosd-client --output-volume mute-toggle",
        "on-click-right": "pavucontrol",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "custom/nm-applet": {
        "name": "custom/nm-applet",
        "exec": "nm-applet",
        "click-left": "nm-connection-editor",
        "tooltip": "Network",
        "return-type": "none"
    },

    "network": {
        "tooltip": true,
        "format-wifi": "Ôá´ ",
        "rotate": 0,
        "on-click-right": "bash ~/.config/waybar/scripts/rofi-wifi-menu.sh",
        "format-ethernet": "Û∞àÄ ",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ ",
        "tooltip-format-disconnected": "Disconnected",
        "format-alt": "<span foreground='#99ffdd'>ÔÄô {bandwidthDownBytes}</span> <span foreground='#ffcc66'>ÔÇì {bandwidthUpBytes}</span>",
        "interval": 2
    },
    
	"bluetooth": {
		"format": "Ôäî {status}",
		"format-disabled": "Ôäî off",
		"format-connected": "Ôäî {num_connections}",
		"tooltip-format": "{device_alias}",
		"tooltip-format-connected": "Ôäî {device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}",
        "on-click": "~/.config/waybar/scripts/rofi-bluetooth &"
	},

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
        "notification": "ÔÇ¢<span foreground='red'><small><sup>ëóä</sup></small></span>",
        "none": "ÔÇ¢ ",
        "dnd-notification": "Ôá∑<span foreground='red'><small><sup>ëóä</sup></small></span>",
        "dnd-none": "Ôá∑ "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "sleep 0.1 && swaync-client -d -sw",
        "escape": true
        }

}
